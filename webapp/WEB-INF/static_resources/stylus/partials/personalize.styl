.person-content
	padding-top: 2em;
	input[type='text'],
	input[type='password']
		normalinput();
		margin: .5em 0;
.person-info
	clearfix();
.person-info-thumb
	float: left;
	margin-right: 1em;
	border-radius: 6px;
	border: 3px solid #dfdfdf;
.person-info-text
	float: left;
.person-info-name
	margin-top: .2em;
	margin-bottom: .2em;
	font-size: 2em;
.person-info-link-to-change-pw
	font-size: .9em;
.person-articles
	clearfix();
	margin-top: 1em;
.person-answers
	float: left;
.person-questions
	float: right;
.person-answers,
.person-questions
	width: 48%;
	h1
		font-size: 1.4em;
	@media not-desktop
		float: none;
		width: 100%;
.person-change-pw
	h1
		font-size: 1.4em;
.person-change-pw-form
	padding-top: 1em;
.person-change-pw-label
	margin-top: 1em;
	margin-bottom: 0;
.person-change-pw-submit
	submitbtn();
	margin-top: 1em;
	background-color: #801A00;
	&:hover
		background-color: lighten(#801A00, 10);
