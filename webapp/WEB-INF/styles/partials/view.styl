.qna-header
	border-bottom: 2px solid #efefef;

.qna-title
	margin-bottom: 0;

.qna-nav
	padding-bottom: .67em;
	.divider
		padding-left: .4em;
		padding-right: .4em;
		font-size: .8em;
		color: #dadada;

.qna-comment
	.article
		&:first-child
			border-top: 1px solid #dfdfdf;
		border-bottom: 1px solid #dfdfdf;
		&.best-article
			border-bottom-width: 4px;
			.btn-like-article
				top: 108px;

.qna-comment-slipp,
.qna-comment-fb
	margin-top: 2em;
	border-top: 2px solid #efefef;

.qna-comment-count
	margin: 0;
	padding: 1em 0 0;
	font-weight: bold;
	font-size: 1.2em;

.qna-best-comment-label
	margin-bottom: 1em;
	strong
		border-bottom: 1px solid #daa9a9;
		font-size: 1.2em;

.qna-login-for-comment-msg
	padding: 1.2em;
	background: #c7e8f7;

.link-back-to-list
	padding: .4em .8em;
	border-radius: 4px;
	&:hover
		text-decoration: none;
		color: #fff;
		background-color: #005580;


.floating
	position: fixed;
	margin-left: 2em;
	padding-left: 1em;
	padding-bottom: 1em;
	@media not-desktop
		border-top: 4px solid #efefef;
		position: static;
		margin-left: 0;
		padding-left: 0;
		padding-bottom: 0;
	> section
		margin-bottom: 2em;
		> h1
			margin-bottom: 0;
			font-size: 1.2em;
		> div
			margin: .5em 0;
