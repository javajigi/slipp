.login-content
	text-align: center;
.login-content-title
	@media phone
		display: none;
.login-content-welcome
	margin-bottom: 2em;
	padding-bottom: 2em;
	border-bottom: 4px dashed #efefef;
	@media phone
		display: none;
	
.choose-login-type
	@extend $clearfix;
	position: relative;
	text-align: left;
	[class*='foundicon-']
		position: relative;
		top: 3px;
		font-size: 1.2em;
	input[type='text'],
	input[type='password']
		@extend $normalinput;
		width: 100%;
		margin: .5em 0;
	.divide-bar
		position: absolute;
		width: 0;
		height: 100%;
		border-width: 0 1px 0  0;
		border-style: dashed;
		border-color: #dfdfdf;
		&.left
			left: 33%;
		&.right
			right: 33%;
		@media phone
			position: static;
			width: 100%;
			height: 0;
			border-width: 1px 0 0 0;

$logintype-block
	float :left;
	width: 33%;
	box-sizing: border-box;
	padding: 1em;
	@media phone
		float: none;
		width: 100%;

.login-with-slipp
	@extend $logintype-block;
.login-with-slipp-submit
	@extend $clearfix;
	text-align: right;
.login-with-slipp-submit-btn
	@extend $submitbtn;
	margin-left: .5em;

.login-with-sns
	@extend $logintype-block;
	text-align: center;

.signin-to-slipp
	@extend $logintype-block;
	float: right;
.signin-to-slipp-notice
	font-size: .9em;
	background: #f7f7c7;
	color: red;
	margin-top: .5em;
	padding: .5em;
	border-radius: 4px;
.signin-to-slipp-btn
	@extend $submitbtn;
	width: 100%;
	background-color: #2BB45D;
	&:hover
		background-color: lighten(#2BB45D, 10);
.signin-with-sns
	width: 30%;
	margin: 0 auto;
	@media phone-landscape
		width: 100%;
.signin-with-sns-submit-btn
	@extend $submitbtn;
	width: 100%;
	background-color: #2BB45D;
	&:hover
		background-color: lighten(#2BB45D, 10);

$btn-login
	width: 10em;
	margin: 0 .4em;
	padding: .4em 0;
	border: 0;
	border-radius: 3px;
	text-align: center;
	font-size: 1.2em;
	background-color: transparent;
	@media phone-landscape
		width: 100%;
		margin: .5em 0;
	&:hover
		color: #fff;

.btn-login-facebook
	@extend $btn-login;
	&:hover
		background-color: #3B5998;
.btn-login-twitter
	@extend $btn-login;
	&:hover
		background-color: #00A0D1;
.btn-login-google
	@extend $btn-login;
	&:hover
		background-color: #E94B35;
