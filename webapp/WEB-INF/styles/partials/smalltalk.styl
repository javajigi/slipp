smalltalk-theme-color = #8FB4B9;

.smalltalk
  position: relative;
  z-index: 0;
.smalltalk-replyform-fragment
  display: none;
.smalltalk-form
  position: relative;
  z-index: 1;
  padding: 10px;
  border: 1px solid #dadada;
  border-radius: 4px 4px 0 0;
  box-shadow: 0 0 4px rgba(0, 0, 0, .2);
  background-color: #f5f5f5;
  text-align: right;
.tf-smalltalk-form-msg
  box-sizing: border-box;
  display: block;
  overflow: auto;
  width: 100%;
  height: 4.8em;
  padding: .4em;
  border: 1px solid #ddd;
  line-height: 1.2em;
  resize: vertical;
  &:focus
    box-shadow: none;
    border-color: #aaa;
.smalltalk-form-fail-msg
  margin-top: .4em;
.smalltalk-form-util
  @extend $clearfix;
  margin-top: .6em;
.smalltalk-form-util-msg
  float: left;
  margin: 0;
  padding: 0;
  color: #999;
.btn-smalltalk-form-util-submit
  float: right;
  margin: -.4em 0;
  padding: .4em;
  border: 0 none;
  border-radius: 3px;
  background-color: #666;
  color: #fff;
  &:hover
    background-color: darken(@background-color, 10);
.smalltalk-list
  list-style: none;
  position: relative;
  z-index: 0;
  width: 98%;
  margin: -1px 1% 0;
  padding: 0;
  box-shadow: 0 0 4px rgba(0, 0, 0, .2);
  .ui-smalltalk-list-collapse &
    box-shadow: none;
    margin-bottom: 3em;
.smalltalk-item
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  margin-top: -2px;
  padding: .5em 1em;
  border: 1px solid #dfdfdf;
  border-radius: 2px;
  background-color: #fff;
  transition: height 2s 0 ease;
  &:first-child
    margin-top: 0;
  .ui-smalltalk-list-collapse &
    // z-index: -1;
    box-shadow: 0 0 4px rgba(0, 0, 0, .2);
    padding-bottom: 0;
.smalltalk-item-summary
  @extend $clearfix;
  position: relative;
  margin: .4em -.2em .8em;
  padding: .6em;
  border-width: 3px;
  border-style: dashed;
  border-color: #fff;
  background-color: #f5f5f5;
  &:hover
    .smalltalk-item-summary-title
      background-color: #F8FFC5;
.smalltalk-item-summary-thumb
  float: left;
  margin-right: .4em;
.smalltalk-item-summary-text
  overflow: hidden;
.smalltalk-item-summary-title
  display: block;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
.smalltalk-item-summary-cont
  color: #999;
.smalltalk-item-summary-link
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  text-indent: -9999px;
  overflow: hidden;
// for smalltalk-list-collapse ui
for i in (1..10)
  .smalltalk-item-{i}
    z-index: 11 - i;
    if i > 1
      .ui-smalltalk-list-collapse &
        position: absolute;
        bottom: 0;
        left: 0;
        overflow: hidden;
        max-height: 100%;
        if i > 3
          height: 1px;
          box-shadow: none;
.smalltalk-item-1
  .ui-smalltalk-list-collapse &
    padding-bottom: .5em;
    // z-index: 1;
.smalltalk-item-2
  .ui-smalltalk-list-collapse &
    left: 8px;
    bottom: -1.6em;
    transform: rotate(-1.2deg);
    width: 98%;
    background-color: #f9f9f9;
.smalltalk-item-3
  .ui-smalltalk-list-collapse &
    bottom: -1.8em;
    transform: rotate(1.6deg);
    width: 94%;
    box-shadow: 0 3px 4px rgba(0, 0, 0, .2);
    background-color: #f3f3f3;
.smalltalk-item-info
  margin-bottom: .4em;
  border-bottom: 2px dashed #dfdfdf;
.smalltalk-item-info-time
  padding-left: .8em;
  color: #999;
  font-size: .8em;
.smalltalk-item-cont
  word-break: break-all;
  font-size: 1.2em;
  a
    color: #222;
    border-bottom: 1px dashed #999;
    text-decoration: none;
.smalltalk-list-expand
  position: absolute;
  right: 4px;
  top: 100%;
  z-index: 100;
  text-align: right;
.btn-smalltalk-list-expand
  display: none;
  width: 50px;
  border: 0 none;
  border-radius: 0 0 3px 3px;
  background-color: smalltalk-theme-color;
  color: #fff;
  &:after
    content: '';
    position: absolute;
    left: 50%;
    top: 100%;
    margin-left: -21px;
    border-width: 5px 22px;
    border-style: solid;
    border-color: @background-color transparent transparent transparent;
  .ui-smalltalk-list-collapse &
    display: block;
  &:hover
    background-color: darken(@background-color, 10)
    &:after
      border-top-color: @background-color;
.smalltalk-notice
  margin: 0;
  padding-top: .4em;
  text-align: right;
  .ui-smalltalk-list-collapse &
    display: none;

.btn-smalltalk-reply
  display: none;
  padding: 3px;
  border-bottom: none !important;
  border-radius: 3px;
  background: #eaeaea;
  font-size: .7em;
  vertical-align: middle;
  &:hover
    background-color: #d1d1d1;
  .smalltalk-item:hover &
    display: inline-block;

.smalltalk-item-replylist
  margin-top: 6px;
  padding-top: 6px;
  border-top: 1px dashed #dfdfdf;

.smalltalk-replyform-submit
  width: 100%;
  margin: 0 0 .4em;
  padding: .4em;
  border: 0 none;
  border-radius: 0 0 3px 3px;
  background-color: #aaa;
  color: #fff;
  &:hover
    background-color: darken(@background-color, 10);

.smalltalk-replylist
  list-style: none;
  margin: 0;
  padding: 0;
  text-indent: -2em;
  margin-left: 2em;
