.qna-list
	.list
		list-style: none
		margin: 0
		padding: 0
		> li
			margin: 16px 0
			border: 5px solid #eee
			border-radius: 3px
			&:first-child
				margin-top: 0
			.wrap
				border: 1px solid #ddd
		.main
			padding: 16px 10px 10px
			.subject
				display: block
				font-size: 1.4em
				line-height: 1.4em
				a
					color: #333
		.reply
			float: left
			font-family: tahoma
			.symbol  
				display: inline-block
				background-color: #87B6C5
				border-radius: 100%
				box-shadow: inset 0 0 10px darken(@background-color, 10)
				padding: 3px 5px
				color: #fff
				font-style: normal
				line-height: 1em
				cursor: default
			.point
				color: #999          
				font-weight: bold
		.sub
			padding: 10px
			border-top: 1px solid #f5f5f5
			background-color: #fafafa
			.auth-info
				text-align: right
				.time
					color: #999
					font-size: .9em
				.author
					font-weight: bold
