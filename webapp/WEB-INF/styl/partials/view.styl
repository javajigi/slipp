.qna-view
	.auth-info
		display: table
		width: 100%
		box-sizing: border-box
		padding: 10px 10px 10px 10px
		background-color: #fafafa
		border-bottom: 1px solid #f5f5f5
		.author-text,
		.author-thumb
			display: table-cell
			vertical-align: middle
		.author-thumb
			width: 60px
		.user-thumb
			width: 50px
			height: 50px
			border-radius: 3px
		.author-name
			font-weight: bold
			font-size: 1.2em
		.time
			display: block
	.doc
		.util
			text-align: right
		img
			max-width: 100%
	.article
		border: 5px solid #eee
		.wrap
			border: 1px solid #ddd
		.doc
			padding: 20px 10px
			.share
				margin-top: 2em
				clearfix()
				.sns
					float: left
					margin-right: 10px
	.qna-comment
		background-color: #eee
		padding: 30px 5px 10px
		.list
			margin: 20px 0 0
			list-style: none
			> li
				margin-bottom: 10px
				&:first-child
					margin-top: -10px
				&.best
					padding-bottom: 10px
					border-bottom: 4px dashed #fff
		.count
			strong
				font-size: 2em
		.permalink,
		.answer-best
			float:left;
			display: block;
			height: 18px;
			padding: 3px 10px;
			color: #fff;
			font-size: 0.9em;
			font-weight: bold;
		.permalink
			margin-left: 10px;
			background: #2c2c2c;
			border-radius: 3px 3px 0 0;
		.answer-best
			background: #CC4C4C;
			border-radius: 0 3px 0 0;
		.auth-info
			position: relative
			clear: left
			margin-top: -1px;
			border-width: 1px 1px 0
			border-style: solid
			border-color: #ddd
			border-radius: 3px 0
			.like
				position: absolute
				right: 10px
				top: 20px
				text-align: right
				font-size: 3em
				line-height: 1em
				cursor: pointer
				.star
					color: #EBEE9E
					text-shadow: 0 0 2px #999
				.like-count
					color: #999
		.doc
			padding: 10px
			border-width: 0 1px 1px
			border-style: solid
			border-color: #ddd
			border-radius: 0 3px
			background-color: #fff
		.util
			clearfix()
			margin-top: 1em
			.btn-like
				position: relative
				float: left
				font-weight: bold
				.star
					position: absolute
					top: 5px
					color: #E4EB3D
					font-size: 1.5em
					line-height: 1em
					font-family: tahoma
					text-shadow: 0 0 2px #000
					vertical-align: middle
				.txt
					margin-left: 25px

